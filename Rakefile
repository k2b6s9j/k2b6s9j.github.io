require 'rubygems'
require 'jekyll'

jekyll = 'jekyll'

task :default => [:server]

task :help do

  system "#{jekyll} --help"

end

task :build do

  system "#{jekyll} build"

end

task :docs do

  system "#{jekyll} docs"

end

task :doctor do

  system "#{jekyll} doctor"

end

task :new do

  system "#{jekyll} new"

end

task :server do

  system "#{jekyll} server"

end