{
  "name": "@keplersj/website",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "npm run build:server && echo '{\"type\":\"commonjs\"}' > ./dist/server/package.json && npm run build:client && npm run build:generate",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/main.js --outDir dist/server",
    "build:generate": "node generate.js",
    "preview": "npm run build && npm run serve",
    "serve": "serve dist/client",
    "test": "jest"
  },
  "gatsby": {
    "plugins": [
      "gatsby-theme-kepler",
      {
        "resolve": "gatsby-plugin-google-analytics",
        "options": {
          "trackingId": "UA-123145115-1",
          "anonymize": true,
          "respectDNT": true
        }
      },
      {
        "resolve": "gatsby-plugin-verify-bing",
        "options": {
          "userIds": [
            "E5D802A305BE2DD99EB4484A4B1DD90E"
          ]
        }
      },
      {
        "resolve": "gatsby-plugin-verify-brave",
        "options": {
          "token": "245d4d7a81a3fba4f21a25d3af9e801782f597de0a46ffdc4afa1cc2717ffcbe",
          "domain": "keplersj.com"
        }
      },
      {
        "resolve": "gatsby-plugin-manifest",
        "options": {
          "name": "Kepler Sticka-Jones",
          "short_name": "Kepler S-J",
          "start_url": "/",
          "background_color": "#ffffff",
          "theme_color": "#4a4a4a",
          "display": "minimal-ui",
          "icon": "content/assets/avatar.jpg"
        }
      },
      "gatsby-plugin-offline"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-starstuff",
      "preset-lint-retext-english"
    ]
  },
  "jest": {
    "projects": [
      {
        "preset": "jest-runner-prettier",
        "displayName": "lint:prettier",
        "testPathIgnorePatterns": [
          "/.cache/",
          "/.forestry/",
          "/content/",
          "/node_modules/",
          "/dist/",
          "/static/",
          "/package-lock.json",
          "/package.json"
        ]
      },
      {
        "preset": "jest-runner-remark",
        "displayName": "lint:remark"
      }
    ]
  },
  "dependencies": {
    "@a11y/skip-navigation": "^0.0.10",
    "@atomico/hooks": "^3.20.2",
    "@emotion/css": "^11.7.1",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@vaadin/router": "^1.7.4",
    "atomico": "^1.34.0",
    "highlight.js": "^11.3.1",
    "js-yaml": "^4.1.0",
    "modern-normalize": "^1.1.0",
    "p-map": "^5.3.0",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-highlight": "^5.0.1",
    "rehype-rewrite": "^3.0.4",
    "rehype-shift-heading": "^1.0.0",
    "rehype-slug": "^5.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "starstuff-components": "^4.0.1",
    "starstuff-style": "^1.1.19",
    "styled-custom-elements": "^0.1.6",
    "webcomponent-markdown": "^0.2.5"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.7.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@types/js-yaml": "^4.0.5",
    "express": "^4.17.2",
    "global-jsdom": "^8.4.0",
    "gray-matter": "^4.0.3",
    "htmlnano": "^1.1.1",
    "jest": "^27.4.5",
    "jest-runner-prettier": "^0.3.6",
    "jest-runner-remark": "^1.0.28",
    "jsdom": "^19.0.0",
    "prettier": "^2.3.2",
    "rehype-minify-json-script": "^3.0.0",
    "rehype-minify-whitespace": "^5.0.0",
    "rehype-parse": "^8.0.3",
    "rehype-remove-comments": "^5.0.0",
    "rehype-stringify": "^9.0.2",
    "remark-preset-lint-retext-english": "^1.0.64",
    "remark-preset-lint-starstuff": "^1.0.6",
    "serve": "^13.0.2",
    "typescript": "^4.5.2",
    "unified": "^10.1.1",
    "vite": "^2.6.14",
    "vite-plugin-rehype": "^0.1.0",
    "whatwg-fetch": "^3.6.2"
  }
}
